#!/bin/sh

while true ; do
	acpitool -b | while read line ; do

		batnum=`echo $line |  sed 's/.*#\(.\).*/\1/'`
		percent=`echo $line | sed 's/.*\:[^,]*, \([^,]*\).*/\1/'`
		if echo $line | grep -q discharging ; then
			color='#662222'
			tleft=`echo $line | sed 's/.*\:[^,]*, [^,]*, \(..:..\).*/\1/'`
		else
			color='#226622'
		fi

		echo "<span color='$color'>BAT#$batnum $percent $tleft</span>"

	done

	sleep 180
done

